{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "exa": {
            "type": "remote",
            "url": "https://mcp.exa.ai/mcp",
            "enabled": true
        },
        "opensrc": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "opensrc-mcp"
            ],
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": [
                "npx",
                "@playwright/mcp@latest"
            ],
            "enabled": true
        },
        "figma": {
            "type": "remote",
            "url": "https://mcp.figma.com/mcp",
            "enabled": false
        },
        "github": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "-e",
                "GITHUB_PERSONAL_ACCESS_TOKEN",
                "ghcr.io/github/github-mcp-server"
            ],
            "environment": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PAT}"
            },
            "enabled": true
        },
    },
    "agent": {
        "plan": {
            "mode": "primary",
            "model": "openai/gpt-5.3-codex",
            "variant": "high",
            "tools": {
                "write": false,
                "edit": false,
                "bash": false
            }
        },
        "build": {
            "mode": "primary",
            "model": "openai/gpt-5.3-codex",
            "variant": "high",
            "tools": {
                "write": true,
                "edit": true,
                "bash": true
            }
        }
    },
    "permission": {
        "skill": {
            "prd": "deny",
            "prd-task": "deny",
            "complete-next-task": "deny"
        }
    },
    "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"]
}
