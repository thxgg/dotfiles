{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "exa": {
            "type": "remote",
            "url": "https://mcp.exa.ai/mcp",
            "enabled": true
        },
        "opensrc": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "opensrc-mcp"
            ],
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": [
                "npx",
                "@playwright/mcp@latest"
            ],
            "enabled": false
        },
        "figma": {
            "type": "remote",
            "url": "https://mcp.figma.com/mcp",
            "enabled": false
        },
        "github": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "-e",
                "GITHUB_PERSONAL_ACCESS_TOKEN",
                "ghcr.io/github/github-mcp-server"
            ],
            "environment": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PAT}"
            },
            "enabled": true
        },
        "overseer": {
            "type": "local",
            "command": ["npx", "-y", "@dmmulroy/overseer@0.11.0", "mcp"],
            "environment": {
                "OVERSEER_DB_PATH": "{env:HOME}/.local/share/opencode/overseer/tasks.db"
            },
            "enabled": false
        },
        "steward": {
            "type": "local",
            "command": ["npx", "-y", "@thxgg/steward", "mcp"],
            "enabled": false
        }
    },
    "agent": {
        "plan": {
            "mode": "primary",
            "model": "openai/gpt-5.3-codex",
            "variant": "high",
            "tools": {
                "write": false,
                "edit": false,
                "bash": false
            }
        },
        "build": {
            "mode": "primary",
            "model": "openai/gpt-5.3-codex",
            "variant": "high",
            "tools": {
                "write": true,
                "edit": true,
                "bash": true
            }
        }
    },
    "permission": {
        "webfetch": "allow",
        "doom_loop": "ask",
        "read": {
            "*": "allow",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.dev.vars": "deny",
            "*.env.example": "allow"
        },
        "edit": {
            "*": "allow"
        },
        "external_directory": {
            "*": "ask",
            "~/Projects/**": "allow",
            "~/.config/**": "allow",
            "~/Projects/Personal/dotfiles/**": "allow",
            "/tmp/**": "allow",
            "/private/tmp/**": "allow"
        },
        "bash": {
            "*": "ask",
            // Git
            "git status *": "allow",
            "git diff *": "allow",
            "git log *": "allow",
            "git branch *": "allow",
            "git show *": "allow",
            "git stash list *": "allow",
            "git remote *": "allow",
            "git fetch *": "allow",
            "git add *": "allow",
            "git commit *": "allow",
            "git checkout *": "allow",
            "git switch *": "allow",
            "git merge *": "allow",
            "git clone *": "allow",
            "git pull *": "allow",
            "git init *": "allow",
            "git worktree *": "allow",
            "git rebase *": "allow",
            "git push *": "allow",
            "git reset --soft *": "allow",
            "git reset --hard *": "deny",
            "git push --force *": "deny",
            "ls *": "allow",
            "cat *": "allow",
            "head *": "allow",
            "tail *": "allow",
            "find *": "allow",
            "rg *": "allow",
            "grep *": "allow",
            // Text processing
            "sort *": "allow",
            "uniq *": "allow",
            "wc *": "allow",
            "cut *": "allow",
            "awk *": "allow",
            "sed *": "allow",
            "tr *": "allow",
            "xargs *": "allow",
            "tee *": "allow",
            "diff *": "allow",
            "comm *": "allow",
            "paste *": "allow",
            "column *": "allow",
            // System info
            "which *": "allow",
            "type *": "allow",
            "file *": "allow",
            "stat *": "allow",
            "du *": "allow",
            "df *": "allow",
            "env": "allow",
            "printenv *": "allow",
            "uname *": "allow",
            "hostname": "allow",
            "whoami": "allow",
            "id": "allow",
            "date *": "allow",
            "pwd": "allow",
            "echo *": "allow",
            "printf *": "allow",
            "mkdir *": "allow",
            "cp *": "allow",
            "mv *": "allow",
            "rm *": "ask",
            "rm -rf *": "deny",
            "pnpm *": "allow",
            "npm *": "allow",
            "npx *": "allow",
            "node *": "allow",
            "bun *": "allow",
            "gh pr list *": "allow",
            "gh pr view *": "allow",
            "gh pr diff *": "allow",
            "gh pr checks *": "allow",
            "gh pr status *": "allow",
            "gh issue list *": "allow",
            "gh issue view *": "allow",
            "gh issue status *": "allow",
            "gh repo view *": "allow",
            "gh repo clone *": "allow",
            "gh api *": "allow",
            "gh search *": "allow",
            "gh status": "allow",
            "gh status *": "allow",
            // GitHub Actions (read-only)
            "gh run list *": "allow",
            "gh run view *": "allow",
            "gh run watch *": "allow",
            "gh workflow list *": "allow",
            "gh workflow view *": "allow",
            "gh cache list *": "allow",
            // Releases, gists, labels (read-only)
            "gh release list *": "allow",
            "gh release view *": "allow",
            "gh gist list *": "allow",
            "gh gist view *": "allow",
            "gh label list *": "allow",
            "gh ruleset list *": "allow",
            "gh ruleset view *": "allow",
            // Write operations
            "gh pr create *": "allow",
            "gh pr merge *": "ask",
            "gh pr close *": "ask",
            "gh issue create *": "allow",
            "gh issue close *": "ask",
            "gh run cancel *": "ask",
            "gh run rerun *": "ask",
            "gh release create *": "ask",
            "gh release delete *": "deny",
            "lsof *": "allow",
            "kill *": "ask",
            "wrangler *": "allow",
            // Additional commands based on install.sh CLI utilities
            "jq *": "allow",
            "bat *": "allow",
            "fd *": "allow",
            "fzf *": "allow",
            "delta *": "allow",
            "htop *": "allow",
            "tree *": "allow",
            "curl *": "allow",
            "wget *": "allow",
            "go *": "allow",
            "rustc *": "allow",
            "cargo *": "allow",
            "python *": "allow",
            "python3 *": "allow",
            "pip *": "allow",
            "pip3 *": "allow",
            "pipx *": "allow",
            "uv *": "allow",
            "ruff *": "allow",
            "ruby *": "allow",
            "make *": "allow",
            "cmake *": "allow",
            "shellcheck *": "allow",
            "jj *": "allow",
            "mkcert *": "allow",
            "age *": "allow",
            "stow *": "allow",
            "tmux *": "allow",
            "nvim *": "allow",
            "zoxide *": "allow",
            "atuin *": "allow",
            "asciinema *": "allow",
            "agg *": "allow",
            "gifski *": "allow",
            "ffmpeg *": "allow",
            "websocat *": "allow",
            "nmap *": "ask",
            "cloudflared *": "allow",
            "pscale *": "allow",
            "yarn *": "allow",
            "wrk *": "allow",
            "try *": "allow",
            // Docker
            "docker *": "allow",
            "docker-compose *": "allow",
            // macOS utilities
            "brew *": "allow",
            "open *": "allow",
            "pbcopy": "allow",
            "pbpaste": "allow",
            "source *": "allow",
            // Ruby toolchain
            "rbenv *": "allow",
            "gem *": "allow",
            "bundle *": "allow",
            // Shell
            "omz *": "allow"
        },
    },
    "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"]
}
